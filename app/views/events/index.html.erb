<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>future events</th>
    </tr>
  </thead>

  <tbody>
    <% @future_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <%= button_to 'Attend', {:controller => "attended_events", :action => "create", :event_id => event.id, :user_id=> current_user } , :method=>:post %> </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>


<table>
  <thead>
    <tr>
      <th>Past events</th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

