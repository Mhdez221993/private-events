<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%#<td><%= button_to 'Attend', { :controller => "attended_events", :action => "create", :visitor_id => current_user.id, :attended_id => event.id}, method: :post %>
        <td> <%= button_to 'Attend', {:controller => "attended_events", :action => "create", :event_id => event.id, :user_id=> current_user.id} , :method=>:post %> </td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

